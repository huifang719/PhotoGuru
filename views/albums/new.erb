<div container>
    <div class="row text-center">
        <h1>Album Hub</h1>
    </div>
    <div class="row text-center justify-content-even align-items-center">
        <div class="col col-sm-6 text-center">
            <h4>Start your album by</h4> 
        </div>
        <div class="col col-sm-2">
            <a id="member" href="/images/new">Add images</a>
        </div>  
        
</div>

<div class="container">
    <div class="row align-content-center">
        <div class="col col-sm-12 col-md-12 col-lg-6">
            <div class="row justify-content-even align-items-center">
                
                <div class="col col-6 text-center">
                    <h4>Default Cover</h4>
                </div>
                <div class="col col-2 text-center">
                    <a id="member" href="/images/<%= image['id'] %>/edit">Change Cover Image</a>
                </div>
            </div>
            <div class="row">
                <img src="https://images.unsplash.com/photo-1663183538146-71561111529d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80" alt="">
            </div>
        </div>
        <% images.each do |image| %> 
        <div class="col col-sm-12 col-md-12 col-lg-6">
            <div class="row justify-content-even align-items-center">
                
                <div class="col col-6 text-center">
                    <h4><%= image['title'] %></h4>
                </div>
                <div class="col col-2 text-center">
                    <a id="member" href="/images/<%= image['id'] %>/edit">Edit</a>
                </div>
                <div class="col col-2 text-center">
                    <form action="/images/<%= image['id'] %>" method="POST">
                        <input type="hidden" name="_method" value="delete">
                        <button id="member">Delete</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <img src="<%= image['img_url'] %>" alt="">
            </div>
            <div class="row"></div>
                <div class="col col-5 text-left">
                    <h4><%= image['author'] %></h4>
                </div>
                <div class="col col-6 text-center">
                    <p><%= image['img_description'] %></p>
                </div>
        </div>
        <% end %>
    </div>
</div>
