<form class="active-form" action="/images/<%= image['id'] %>" method="POST">
    <input type="hidden" name="_method" value="put">
    <div class="container">
        <h1>Update image</h1>
    </div>
    <div class="inline">
        <span>*</span>
        <label for="">Image Title</label>
    </div>
    <input type="text" name="title" required><br>
    <div class="inline">
        <span>*</span>
        <label for="">Image URL</label>
    </div>
    <input type="text" name="image_url" required><br>
    <div class="inline">
        <span>*</span>
        <label for="">Author</label>
    </div>
    <input type="text" name="author" required><br>
    
    <label for="">Description</label>
    <textarea name="description" cols="30" rows="6"></textarea>
    </div><br>
    <button id="btn-style">Update image</button>
</form>
