<% if logged_in? %>
<div class="container">
    <div class="row justify-content-between">
        <div class="col col-sm-7">
            <h4 class="text-start">Welcome back, <%= current_user['first_name'] %></h4>
        </div>
        <div class="col col-3 text-end">
            <form  action="/sessions" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button>Logout</button>
            </form>
        </div>
    </div>
    <div class="row jutify-content-between align-items-center">
        <div class="col col-sm-8">
            <form action="">
                <div class="inline">
                <select name="" id="">
                    <option value="">Choose your photography level</option>
                    <option value="">Beginner</option>
                    <option value="">Intermediate</option>
                    <option value="">Pro</option>  
                </select>
                <button id="btn-style">Submit</button>
                </div>
            </form>
        </div>
        <div class="col col-sm-4">
            <a class="album" href="/albums/new">Create Album</a>
        </div>
    </div>
    <div class="row text-center">
        <p id="log"></p>
    </div>
    <div class="row">
        <h4>Gallery</h4>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://images.unsplash.com/photo-1663011109441-6948af4a0b80?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://images.unsplash.com/photo-1663051957237-8da7729a1c15?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h4>Learning</h4>
    
    </div>
</div>

<% else %> 
<div class="container text-center"> 
    <div col col-sm-11 col-md-5 col-lg-5>
        <h3>Welcome,Guest!</h3>
        <h5>Join our thriving photography Community</h5>
        <li>Online photography tutorials</li>
        <li>Community support and feedback</li>
        <li>Photography Competitions</li>
        <br>
        <a id="btn-style" href="/users/new">Join PhotoGuru</a>
        <br><br>
        <P>Already a member? <a id="btn-style" href="/sessions/new">Sign in</a></P> 
    </div> 
    <div col col-sm-11 col-md-5 col-lg-5>
        <img src="https://images.unsplash.com/photo-1433838552652-f9a46b332c40?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="">
    </div>
<div> 
